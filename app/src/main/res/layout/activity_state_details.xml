<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/explore_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- State Name -->
        <TextView
            android:id="@+id/tvStateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:letterSpacing="0.02"
            android:layout_marginBottom="14dp"/>

        <!-- Description Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About This Place"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#555"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Popular Places Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Tourist Spots"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvPopularPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#555"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Famous Dishes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Famous Local Dishes"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#555"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gallery Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Gallery"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="10dp"/>

        <!-- Image Gallery -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvImages"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="8dp"
                android:clipToPadding="false" />

        </androidx.cardview.widget.CardView>

        <!-- Google Map Button -->
        <Button
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ðŸ“ Find Best Routes"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:stateListAnimator="@null"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>
