<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#FFF3E1"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/img_22"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txtSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful!"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="#2E7D32"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtPaidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid: â‚¹0"
        android:textSize="20sp"
        android:textColor="#4E3000"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txtBookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking ID: ---"
        android:textSize="18sp"
        android:textColor="#4E3000"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/btnDownloadInvoice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Download Invoice"
        android:backgroundTint="#D97706"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Back to Home"
        android:backgroundTint="#FFB45C"
        android:textColor="#4E3000"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="12dp"/>
</LinearLayout>