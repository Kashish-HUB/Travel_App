<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Flight Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:padding="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Summary Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_flight"
                        app:tint="#3F51B5"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvFlightSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight Summary"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPriceSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 4,999"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="10dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="14dp"/>

                <!-- Passenger Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_user"
                        app:tint="#3F51B5"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passenger Details"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"/>
                </LinearLayout>

                <!-- Passenger Name -->
                <EditText
                    android:id="@+id/etPassengerName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Passenger Full Name"
                    android:background="@drawable/rounded_input"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:textColorHint="#9E9E9E"/>

                <!-- Passenger Phone -->
                <EditText
                    android:id="@+id/etPassengerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:background="@drawable/rounded_input"
                    android:padding="14dp"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:textColorHint="#9E9E9E"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Confirm Booking"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:padding="14dp"/>

    </LinearLayout>
</ScrollView>
