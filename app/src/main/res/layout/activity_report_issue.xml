<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E1"
    android:padding="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgReportHeader"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_26"/>
        <TextView
            android:id="@+id/txtReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report a Safety Issue"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#4E3000"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Issue Type"
            android:textSize="16sp"
            android:textColor="#5A4636"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:id="@+id/spinnerIssueType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe the Issue"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/edtIssueDescription"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:hint="Explain what happened..."
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="start|top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select City"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location / Landmark"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/edtLocation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter exact location or landmark..."
            android:background="#FFFFFF"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"/>
        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Photo (Optional)"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB45C"
            android:textColor="#3D1F00"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:background="#DDDDDD"/>
        <Button
            android:id="@+id/btnSubmitIssue"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Submit Issue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D97706"
            android:layout_marginTop="25dp"/>
    </LinearLayout>
</ScrollView>