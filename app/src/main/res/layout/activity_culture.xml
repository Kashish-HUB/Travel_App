<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_12"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--  HEADER  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/headerImage"
                android:src="@drawable/img_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <!--  TITLE  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience Local Life"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover authentic experiences, workshops, and cultural activities"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#FFE7C5"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="6dp"/>
        <!--  COOKING CARD  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCooking"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCooking"
                    android:src="@drawable/img_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cooking Classes"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Learn authentic recipes with local chefs."
                        android:textColor="#FFE7C5" android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/btnJoinCooking"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:text="Join Now"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#FFB45C"
                        android:textColor="#3D1F00"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!--  ARTISAN CARD  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardArtisan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgArtisan"
                    android:src="@drawable/img_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Artisan Workshops"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Create pottery, weave fabrics or paint art."
                        android:textColor="#FFE7C5" android:layout_marginTop="6dp"/>
                    <Button
                        android:id="@+id/btnJoinArtisan"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:text="Join Now"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#FFB45C"
                         android:textColor="#3D1F00"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!--  CULTURAL TOUR CARD  -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTour"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgTour"
                    android:src="@drawable/img_17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Cultural Tours"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Visit local villages and experience traditions."
                        android:textColor="#FFE7C5"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/btnJoinTour"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:text="Join Now"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#FFB45C"
                        android:textColor="#3D1F00"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>