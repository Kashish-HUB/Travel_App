<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFF3E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <!--  Success Image  -->
    <ImageView
        android:id="@+id/successImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_22"
        android:layout_marginBottom="20dp"
        android:contentDescription="Success"/>
    <!--  Main Message  -->
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Submitted Successfully!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4E3000"
        android:gravity="center"
        android:padding="10dp"/>
    <!--  Sub Message  -->
    <TextView
        android:id="@+id/txtSubMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Will Reach Shortly."
        android:textSize="18sp"
        android:textColor="#4E3000"
        android:gravity="center"
        android:paddingTop="5dp"/>
</LinearLayout>