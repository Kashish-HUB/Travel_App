<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFF6E9"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgSummary"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="#EDEDED"/>
    <TextView
        android:id="@+id/txtSummaryTitle"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3A2400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtSummaryOriginal"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="#8A755A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtSummaryDiscount"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#D97706"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--  PAYMENT BUTTON  -->
    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Proceed to Payment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D97706"
        android:textColor="#FFFFFF"
        android:gravity="center"/>
</LinearLayout>