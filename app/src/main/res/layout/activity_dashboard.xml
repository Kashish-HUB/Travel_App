<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:title="Travel Dashboard"
            app:titleTextColor="@android:color/black"
            app:navigationIconTint="@android:color/white"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3000000"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Welcome, Traveler!"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp"
                        android:shadowColor="#66000000"
                        android:shadowDx="1"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTravel"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_1"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Book Your Flight"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHotel"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_2"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Find Luxury Hotels"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardExplore"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_3"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Explore New Destinations"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCulture"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_9"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Local Experience and Cultural Immersion"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSafety"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_10"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Travel Safety and Alerts"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDeals"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#33FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/img_11"
                                android:layout_marginEnd="16dp"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true"
                                android:background="@drawable/rounded_image_bg"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Travel Deals and Offers"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#40FFFFFF"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="6dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate Your Experience"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="10dp"/>

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1.0"
                            android:layout_marginBottom="16dp"
                            android:progressTint="@android:color/holo_orange_light"
                            android:secondaryProgressTint="@android:color/holo_orange_light"
                            android:progressBackgroundTint="@android:color/darker_gray"
                            android:indeterminateTint="@android:color/holo_orange_light"
                            />


                        <EditText
                            android:id="@+id/etFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Write your feedback..."
                            android:padding="12dp"
                            android:gravity="top"
                            android:background="@drawable/rounded_box"
                            android:textColor="#000000"
                            android:textColorHint="#666666"
                            android:layout_marginBottom="16dp"/>

                        <Button
                            android:id="@+id/btnSubmitFeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit Feedback"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:backgroundTint="#FF9800"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
