<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF3E1">
    <TextView
        android:id="@+id/titleFakePay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fake Payment"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#4E3000"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/txtFakeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount: â‚¹0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#C47A00"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select UPI App"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4E3000"
        android:layout_marginBottom="10dp"/>
    <RadioGroup
        android:id="@+id/radioGroupApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:elevation="5dp">
        <RadioButton
            android:id="@+id/radioGPAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google Pay"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/radioPhonePe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PhonePe"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/radioPaytm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paytm"
            android:textSize="16sp"/>
    </RadioGroup>
    <Button
        android:id="@+id/btnMakeFakePayment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Pay Securely"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#D97706"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"/>
</LinearLayout>