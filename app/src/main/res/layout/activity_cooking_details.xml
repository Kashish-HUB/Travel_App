<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E1"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgCookingHeader"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_15"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cooking Class with Local Chef"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E3000"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn authentic traditional recipes with a local expert chef. Choose from Indian, Chinese, Italian, or Bakery workshops!"
            android:textSize="16sp"
            android:textColor="#5A4636"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Duration: 2.5 Hours"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Price: â‚¹799 / person"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#C47A00"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Chef"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E3000"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/chef1"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/img_19"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:text="Chef Aditi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:text="Cuisine: Indian, Bakery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:text="â­ Rating: 4.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#FFA000"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnChef1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="ADD"
                    android:backgroundTint="#FFB45C"
                    android:textColor="#3D1F00"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chef2"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:src="@drawable/img_20"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:text="Chef Marco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:text="Cuisine: Italian, Pizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:text="â­ Rating: 4.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#FFA000"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnChef2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="ADD"
                    android:backgroundTint="#FFB45C"
                    android:textColor="#3D1F00"/>
            </LinearLayout>
            <!--  CHEF 3  -->
            <LinearLayout
                android:id="@+id/chef3"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/img_21"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="10dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:text="Chef Li Wei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:text="Cuisine: Chinese, Dim Sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="â­ Rating: 4.8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#FFA000"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnChef3"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="ADD"
                    android:backgroundTint="#FFB45C"
                    android:textColor="#3D1F00"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Time Slots"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/slotContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/slot9am"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="9:00 AM"
                    android:backgroundTint="#FFE0B2"/>
                <Button
                    android:id="@+id/slot10am"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="10:00 AM"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFE0B2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/slot1130am"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="11:30 AM"
                    android:backgroundTint="#FFE0B2"/>
                <Button
                    android:id="@+id/slot1pm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="1:00 PM"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFE0B2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/slot230pm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="2:30 PM"
                    android:backgroundTint="#FFE0B2"/>
                <Button
                    android:id="@+id/slot4pm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="4:00 PM"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFE0B2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/slot5pm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="5:00 PM"
                    android:backgroundTint="#FFE0B2"/>
                <Button
                    android:id="@+id/slot7pm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="7:00 PM"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFE0B2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/slot9pm"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="9:00 PM"
                    android:backgroundTint="#FFE0B2"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Choose Date"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFB45C"
            android:textColor="#3D1F00"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnBookChef"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Book Local Chef"
            android:layout_marginTop="14dp"
            android:backgroundTint="#D97706"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>